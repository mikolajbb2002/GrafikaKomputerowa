import pygame

pygame.init()
win = pygame.display.set_mode((600, 600))
pygame.display.set_caption("First Game")

# deklarowanie kolor√≥w
CZERWONY = (255, 0, 0)
ZIELONY = (0, 255, 0)
ZOLTY = (255, 255, 0)
FIOLETOWY = (128, 0, 128)
JASNY_NIEBIESKI = (0, 255, 255)
POMARANCZOWY = (255, 165, 0)
NIEBIESKI = (0, 0, 255)
SZARY = (128, 128, 128)

run = True
while run:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            run = False


    # Z
    pygame.draw.line(win, CZERWONY, (10, 25), (210, 25), 10)
    pygame.draw.line(win, CZERWONY, (10, 200), (210, 25), 10)
    pygame.draw.line(win, CZERWONY, (10, 200), (210, 200), 10)



    pygame.display.update()
